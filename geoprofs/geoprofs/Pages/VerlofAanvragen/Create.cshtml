@page
@model geoprofs.Pages.VerlofAanvragen.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Aanvraag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aanvraag.WerknemersId" class="control-label"></label>
                <input asp-for="Aanvraag.WerknemersId" class="form-control" placeholder="Voorbeeld: 1004" />
                <p class="text-danger">WerknemersNummer kun je vinden op de werknemers pagina</p>
                <span asp-validation-for="Aanvraag.WerknemersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aanvraag.VanafDatum" class="control-label"></label>
                <input asp-for="Aanvraag.VanafDatum" class="form-control" />
                <span asp-validation-for="Aanvraag.VanafDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aanvraag.TotDatum" class="control-label"></label>
                <input asp-for="Aanvraag.TotDatum" class="form-control" />
                <span asp-validation-for="Aanvraag.TotDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select Option</label>
                <div>
                    <input asp-for="Aanvraag.SelectionType" class="form-check-input" type="radio" value="Vakantie" />
                    <label class="form-check-label">Vakantie</label>
                </div>
                <div>
                    <input asp-for="Aanvraag.SelectionType" class="form-check-input" type="radio" value="Persoonlijk" />
                    <label class="form-check-label">Persoonlijk</label>
                </div>
                <div>
                    <input asp-for="Aanvraag.SelectionType" class="form-check-input" type="radio" value="Ziek" />
                    <label class="form-check-label">Ziek</label>
                </div>
                <span asp-validation-for="Aanvraag.SelectionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
